rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Track documents
    match /tracks/{trackId} {
      allow read: if isSignedIn() && (
        resource.data.uploadedBy == request.auth.uid ||
        resource.data.isPublic == true
      );
      allow create: if isSignedIn() && 
        request.resource.data.uploadedBy == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.uploadedBy == request.auth.uid ||
        request.auth.token.admin == true
      );
      allow delete: if isSignedIn() && 
        resource.data.uploadedBy == request.auth.uid;
    }

    // Subtitles collection
    match /subtitles/{subtitleId} {
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        get(/databases/$(database)/documents/tracks/$(resource.data.trackId)).data.isPublic == true
      );
      allow write: if false; // Only written by Cloud Functions
    }

    // Setlists collection
    match /setlists/{setlistId} {
      allow read: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        resource.data.isPublic == true
      );
      allow create: if isSignedIn() && 
        request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isSignedIn() && 
        resource.data.createdBy == request.auth.uid;
    }

    // User preferences
    match /preferences/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
        request.resource.data.keys().hasAll(['theme', 'defaultArc', 'uploadSettings']);
    }

    // Processing status collection
    // Cloud Functions create processing docs with ID equal to the trackId.
    // Allow reads if the requester owns the corresponding track.
    match /processing/{processingId} {
      allow read: if isSignedIn() && (
        get(/databases/$(database)/documents/tracks/$(processingId)).data.uploadedBy == request.auth.uid ||
        request.auth.token.admin == true
      );
      allow write: if false; // Only written by Cloud Functions
    }
  }
}