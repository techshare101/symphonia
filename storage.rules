rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAudioFile(request) {
      return request.resource.contentType.matches('audio/.*')
        && request.resource.size < 50 * 1024 * 1024;  // 50MB limit
    }

    // User uploaded tracks
    match /tracks/{userId}/{filename} {
      allow read: if isSignedIn() && (
        isOwner(userId) ||
        // Allow read if track is public (check Firestore)
        exists(/databases/$(database)/documents/tracks/$(resource.metadata.trackId)) &&
        get(/databases/$(database)/documents/tracks/$(resource.metadata.trackId)).data.isPublic == true
      );
      allow write: if isSignedIn() && 
        isOwner(userId) && 
        isAudioFile(request);
    }

    // Public exports (SRT, M3U)
    match /exports/{type}/{filename} {
      allow read: if true;  // Public read access
      allow write: if false;  // Only written by Cloud Functions
    }

    // Catch-all: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
